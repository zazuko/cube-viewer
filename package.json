{
  "name": "cube-viewer",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "deploy": "./scripts/deploy.sh",
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "build-wc": "vue-cli-service build --target lib --formats umd,umd-min --inline-vue --name cube-viewer ./src/wc.js",
    "test:unit": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint"
  },
  "main": "dist/cube-viewer.umd.js",
  "files": [
    "/src",
    "/dist/cube-viewer.css",
    "/dist/cube-viewer.umd.js",
    "/dist/cube-viewer.umd.min.js"
  ],
  "dependencies": {
    "@headlessui/vue": "^1.1.0",
    "@rdfjs/fetch": "^2.1.0",
    "@rdfjs/namespace": "^1.1.0",
    "@rdfjs/term-set": "^1.0.1",
    "@tailwindcss/forms": "^0.3.2",
    "@zazuko/rdf-vocabularies": "^2021.3.31",
    "clownface": "^1.2.0",
    "core-js": "^3.11.0",
    "rdf-cube-view-query": "^1.3.1",
    "vue": "^3.0.0",
    "vue3-webcomponent-wrapper": "^0.1.4"
  },
  "devDependencies": {
    "@tailwindcss/postcss7-compat": "^2.1.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-unit-mocha": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0",
    "@vue/eslint-config-standard": "^5.1.2",
    "@vue/test-utils": "^2.0.0-0",
    "autoprefixer": "^9.8.6",
    "babel-eslint": "^10.1.0",
    "chai": "^4.1.2",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^7.0.0",
    "postcss": "^7.0.35",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.1.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "@vue/standard"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "comma-dangle": [
        "error",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "never",
          "exports": "never",
          "functions": "never"
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "mocha": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
