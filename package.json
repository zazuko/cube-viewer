{
  "name": "cube-viewer",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "deploy": "./scripts/deploy.sh",
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "build-wc": "vue-cli-service build --target lib --formats umd,umd-min --inline-vue --name cube-viewer ./src/wc.js",
    "test:unit": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint"
  },
  "main": "dist/cube-viewer.umd.js",
  "files": [
    "/src",
    "/dist/cube-viewer.css",
    "/dist/cube-viewer.umd.js",
    "/dist/cube-viewer.umd.min.js"
  ],
  "dependencies": {
    "@headlessui/vue": "^1.6.7",
    "@heroicons/vue": "^1.0.6",
    "@rdfjs/formats-common": "^2.2.0",
    "@tailwindcss/forms": "^0.5.2",
    "@zazuko/rdf-vocabularies": "^2022.6.29",
    "buffer": "^6.0.3",
    "core-js": "^3.24.1",
    "process": "^0.11.10",
    "promise-the-world": "^1.0.1",
    "rdf-cube-view-query": "^1.8.2",
    "rdf-ext": "^2.0.1",
    "stream-browserify": "^3.0.0",
    "vue": "^3.2.37",
    "vue3-webcomponent-wrapper": "^0.1.4"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^5.0.8",
    "@vue/cli-plugin-eslint": "^5.0.8",
    "@vue/cli-plugin-unit-mocha": "^5.0.8",
    "@vue/cli-service": "^5.0.8",
    "@vue/compiler-sfc": "^3.2.37",
    "@vue/eslint-config-standard": "^6.1.0",
    "@vue/test-utils": "^2.0.2",
    "autoprefixer": "^10.4.8",
    "babel-eslint": "^10.1.0",
    "chai": "^4.3.6",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-vue": "^7.20.0",
    "postcss": "^8.4.16",
    "tailwindcss": "^3.1.8"
  },
  "overrides": {
    "@vue/cli-plugin-unit-mocha": {
      "mocha": "^9.2.2"
    }
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "@vue/standard"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "comma-dangle": [
        "error",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "never",
          "exports": "never",
          "functions": "never"
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "mocha": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
